---
import AWS from './tech/AWS.astro';
import Ansible from './tech/Ansible.astro';
import AstroJS from './tech/Astro.astro';
import Docker from './tech/Docker.astro';
import Kube from './tech/Kube.astro';
import Next from './tech/Next.astro';
import React from './tech/React.astro';
import Svelte from './tech/Svelte.astro';
import TS from './tech/TS.astro';
import Terraform from './tech/Terraform.astro';
import Mongodb from './tech/Mongodb.astro';

const {name, logo} = Astro.props;
---

<div class="flex gap-2 items-center">
    <div class="bg-matty-50 p-4 rounded-full shadow-[1px_1px_4px_rgba(245,248,254,1),-1px_-1px_8px_rgba(245,248,254,1)] dark:shadow-[inset_1px_1px_2px_rgba(114,114,114,0.45)] dark:bg-neutral-20">
        {logo == "aws" && <AWS />}
        {logo == "ansible" && <Ansible />}
        {logo == "astro" && <AstroJS />}
        {logo == "docker" && <Docker />}
        {logo == "kube" && <Kube />}
        {logo == "next" && <Next />}
        {logo == "react" && <React />}
        {logo == "svelte" && <Svelte />}
        {logo == "ts" && <TS />}
        {logo == "terraform" && <Terraform />}
        {logo == "mongodb" && <Mongodb />}
    </div>
    <div>{name}</div>
</div>